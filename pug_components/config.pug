mixin botonFrontal(texto)
    if texto == 'Inscríbete'
        button.btn.btn-primary.btn-lg.btn-header(
            type="button"
        ) #{texto}
    else
        button.btn.btn-outline-light.btn-lg.btn-header(
            type="button"
        ) #{texto}
mixin modulo(num)
    li
        p 
            button.btn.btn-success(
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseExample"+num
                aria-expanded="false"
                aria-controls="collapseExample"+num
                ) Día #{num}
        .collapse(id='collapseExample'+num)
            .card.card-body Secciones y temas.
mixin CampamentoActivo(tema, inicio)
    -var titulo = escudos[tema]
    .col 
        .card.h-100(class=titulo)
            img.card-img-top(
                src=`images/${escudos[tema]}.png`
                alt="..."
                )
            .card-body
                h2.nombre-campamento=titulo
                a.btn.btn-success.btn-lg(
                    type="button"
                    href=link[tema]
                    target="_blank"
                )
                    i.fas.fa-pencil-alt
                    p Inscríbete
                a.btn.btn-secondary.btn-lg(
                    type="button"
                    href="info.html" 
                )
                    i.fas.fa-info
                    p Información
            .card-footer
                small.text-muted #{fechaInicio[`${inicio}`]}
mixin CampamentoInactivo(tema)
    -var titulo = tema
    .col 
        .card.h-100.disabled(class=tema)
            img.card-img-top.desenfoque(
                src=`images/${tema}.png`
                alt="..."
                )
            .card-body
                h2.nombre-campamento.desenfoque=titulo
                a.btn.btn-success.btn-lg.disabled(
                    role="button"
                    href="#"
                    area-disabled="true"
                ) Inscríbete
                a.btn.btn-secondary.btn-lg.disabled(
                    role="button"
                    href="#"
                    area-disabled="true"
                ) Información
            .card-footer
                small.text-muted #{fechaInicio[0]}
mixin EscudoInformacion(numero)
    img.rounded.mx-auto.d-block(src=`images/${escudos[numero]}.png`)
mixin InformacionCampamento(numero)
    -var titulo = escudos[numero]
    -var descripcion = descripciones[numero]
    h2 Campamento de #{titulo}
    ul
        li 10 días
        li +30 horas
        li Cientos de ejercicios
        li Concurso de finalización
        li Certificado
mixin ItemIzquierdaTimeline(num)
    -var numero = numeros[num-1]
    -var fecha = 11 + num
    .timeline-item
        .timeline-img
        .timeline-content.js--fadeInLeft
            h2 Sección #{numero}
            .date #{fecha} ENERO
            ul
                if block
                    block
                else
                    li Hola
mixin ItemDerechaTimeline(num)
    -var numero = numeros[num-1]
    -var fecha = 11 + num
    .timeline-item
        .timeline-img
        .timeline-content.js--fadeInRight
            div
                h2.derecha Sección #{numero}
                .date #{fecha} ENERO
            ul.derecha-list
                if block
                    block
                else
                    li No hay nada
mixin TemaPorSeccion(texto)
    -var tema = texto
    li #{tema}
mixin AgregarIntegrante(user)
    -var integrante = integrantes[user]
    -var foto = "perfil-"+integrante
    .col.integrante
        div.contenedor-foto
            img(src=`images/${foto}.jpg`)
        h3=integrante
        ul.redes
            if block
                block
            else
                li none
mixin AgregarRedSocial(red, link)
    -var redtotal = "fa-"+red
    li
        a(
            href=`${link}`
            target="_blank"
        )
            i.fab(class=redtotal)
mixin AgregarCorreo(id, link)
    -var redtotal = "fa-"+id
    li
        button(
            type="button"
            class="btn btn-secondary"
            data-bs-toggle="tooltip"
            data-bs-placement="bottom"
            title=`${link}`
        )
            i.far(class=redtotal)